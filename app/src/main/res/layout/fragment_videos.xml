<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.wdd.app.android.interestcollection.ui.videos.fragment.VideosFragment">

    <RelativeLayout
        android:id="@+id/fragment_videos_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_videos_refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_videos_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <org.wdd.app.android.interestcollection.views.LoadView
        android:id="@+id/fragment_videos_loadview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
