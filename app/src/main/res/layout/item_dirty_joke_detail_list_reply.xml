<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <View
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="#e1e2e4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/item_dirty_joke_detail_list_reply_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeItemExtra"
            android:padding="6dp"
            android:background="@drawable/joke_reply_bg"/>

        <TextView
            android:id="@+id/item_dirty_joke_detail_list_reply_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#acacbb"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_dirty_joke_detail_list_reply_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="6dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

    </LinearLayout>
</FrameLayout>